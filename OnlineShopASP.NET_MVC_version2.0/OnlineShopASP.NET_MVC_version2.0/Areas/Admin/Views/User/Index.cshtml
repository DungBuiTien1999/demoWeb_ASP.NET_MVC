@model PagedList.IPagedList<Models.EF.User>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Manage User";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    List User
}

@section ClientScript{

    <script src="~/Assets/admin/js/controller/userController.js"></script>
}

<div class="container-fluid">

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            @using (Html.BeginForm("Index", "User", FormMethod.Get))
            {
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row form-group">
                            <div class="col-md-5">
                                <input type="text" value="@ViewBag.SearchString" name="searchString" class="form-control" />
                            </div>
                            <div class="col-md-5">
                                <button class="btn btn-primary" type="submit">Search</button>
                            </div>
                            <div class="col-md-2">
                                <a href="/Admin/User/Create" class="btn btn-outline-primary" role="button">Create user</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Create Date</th>
                            <th>Full Name</th>
                            <th>Status</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Create Date</th>
                            <th>Full Name</th>
                            <th>Status</th>
                            <th>#</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="row_@item.ID">
                                <td>@item.Username</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td>@(item.CreateDate.HasValue? @item.CreateDate.Value.ToString("dd/MM/yyyy") : "")</td>
                                <td>@item.Name</td>
                                <td><a href="#" class="btn-active" data-id="@item.ID">@(item.Status.GetValueOrDefault(false) ? "Active" : "Blocked")</a></td>
                                <td>
                                    <a href="/Admin/User/Edit/@item.ID">Edit</a> |
                                    @Ajax.ActionLink("Delete", "Delete", new { @id = item.ID }, new AjaxOptions
                               {
                                   Confirm = "Do you want to delete this user?",
                                   OnComplete = "$('#row_" + @item.ID + "').remove()",
                                   HttpMethod = "Delete"
                               })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <ul class="pagination">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </ul>
            </div>
        </div>
    </div>

</div>

