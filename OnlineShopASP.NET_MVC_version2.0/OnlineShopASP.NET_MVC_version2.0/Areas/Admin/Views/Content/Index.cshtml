@model PagedList.IPagedList<Models.EF.Content>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    List User
}

<div class="container-fluid">

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            @using (Html.BeginForm("Index", "User", FormMethod.Get))
            {
                <div class="row">
                    <div class="col-lg-12">
                        <input type="text" value="@ViewBag.SearchString" name="searchString" />
                        <button class="btn btn-primary" type="submit">Search</button>
                    </div>
                </div>
            }
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>CategoryID</th>
                            <th>Create Date</th>
                            <th>Tags</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>CategoryID</th>
                            <th>Create Date</th>
                            <th>Tags</th>
                            <th>Status</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="row_@item.ID">
                                <td>
                                    <a href="/Admin/Content/Edit/@item.ID">Edit</a> |
                                    @Ajax.ActionLink("Delete", "Delete", new { @id = item.ID }, new AjaxOptions
                               {
                                   Confirm = "Do you want to delete this content?",
                                   OnComplete = "$('#row_" + @item.ID + "').remove()",
                                   HttpMethod = "Delete"
                               })
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.CategoryID</td>
                                <td>@(item.CreateDate.HasValue? @item.CreateDate.Value.ToString("dd/MM/yyyy") : "")</td>
                                <td>@item.Tags</td>
                                <td>@(item.Status.GetValueOrDefault(false) ? "Active" : "Blocked")</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <ul class="pagination">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </ul>
            </div>
        </div>
    </div>

</div>

